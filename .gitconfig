[user]
	name = Vit Brunner
	email = vit.brunner@gmail.com

[core]
	excludesfile = ~/.gitignore

[color]
	ui = auto

[alias]
	a = add
	ap = add -p
	br = branch
	bra = branch -a
	brd = branch -D
	ci = commit
	cim = commit -m
	cia = commit -a
	ciam = commit -am
	co = checkout
	cob = checkout -b
	cot = checkout --track
	d = diff
	dc = diff --cached
	lg = log --summary --name-status
	lf = log --full-diff -p
	s = status
	tree = log --graph --pretty=oneline --decorate
	unstage = reset HEAD
